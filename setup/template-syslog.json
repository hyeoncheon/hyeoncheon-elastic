{
  "template" : "syslog-*",
  "settings" : {
    "index" : {
      "refresh_interval" : "5s"
    }
  },
  "mappings" : {
    "_default_" : {
      "_all" : {"enabled" : true, "omit_norms" : true},
      "dynamic_templates": [ {
        "ip_addresses": {
          "match": "*_ip",
          "match_mapping_type" : "string",
          "mapping": {
            "type": "ip"
          }
        }
      }, {
        "firewall_fields": {
          "match":   "fw_*",
          "match_mapping_type" : "string",
          "mapping": { "type": "string", "index": "not_analyzed" }
        }
      }, {
        "geoips": {
          "match":   "*_geo",
          "match_mapping_type" : "*",
          "mapping": {
            "properties" : {
              "location" : { "type": "geo_point" },
              "ip" : { "type": "ip" }
            }
          }
        }
      } ],
      "properties" : {
        "@timestamp": { "type": "date" },
        "@version": { "type": "string", "index": "not_analyzed" },
        "logsource" : { "type" : "string", "index": "not_analyzed" }
      }
    }
  }
}
